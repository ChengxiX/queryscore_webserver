(define (log-*-byclub club)
  (if (equal? club "")
      (list (query-list db "SELECT club FROM logs")
            (query-list db "SELECT comment FROM logs")
            (query-list db "SELECT result FROM logs")
            (query-list db "SELECT logtime FROM logs"))
      (list (query-list db "SELECT club FROM logs WHERE club = ?" club)
            (query-list db "SELECT comment FROM logs WHERE club = ?" club)
            (query-list db "SELECT result FROM logs WHERE club = ?" club)
            (query-list db "SELECT logtime FROM logs WHERE club = ?" club))))
(define (log-insert! club comment result)
